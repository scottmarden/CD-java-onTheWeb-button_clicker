<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Button Clicker</display-name>
  <description>Click that button!</description>
  <servlet>
    <servlet-name>HomeCtrl</servlet-name>
    <servlet-class>com.scottmarden.buttonclicker.controllers.HomeCtrl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeCtrl</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <display-name>Click!</display-name>
  <description>Button clicked!</description>
  <servlet>
    <servlet-name>ClickCtrl</servlet-name>
    <servlet-class>com.scottmarden.buttonclicker.controllers.ClickCtrl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClickCtrl</servlet-name>
    <url-pattern>/click</url-pattern>
  </servlet-mapping>
</web-app>